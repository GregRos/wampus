{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "allowUnreachableCode": true,
    "lib": [
      "es6",
      "es2015.collection",
      "es2016.array.include"
    ],
    "declaration": true,
    "sourceRoot": "src",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}