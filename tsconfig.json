{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowUnreachableCode": true,
    "lib": [
      "es6",
      "es2015.collection",
      "es2016.array.include",
      "dom"
    ],
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}