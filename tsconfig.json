{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
	"sourceMap": true,
    "allowUnreachableCode": true,
	"experimentalDecorators": true,
	"lib": [
      "es6",
      "es2016.array.include",
      "dom"
    ],
    "declaration": true,
    "outDir": "dist",
	"allowSyntheticDefaultImports": true,
	"esModuleInterop": true,
	"moduleResolution": "node"
  },
  "include": [
	"src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}