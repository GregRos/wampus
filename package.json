{
  "name": "wampus",
  "version": "0.1.0-beta",
  "description": "WAMP client for JavaScript",
  "main": "dist/index.js",
  "repository": "https://github.com/GregRos/wampus",
  "author": "GregRos",
  "license": "MIT",
  "directories": {
    "test": "dist/test",
    "lib": "dist/lib",
    "example": "src/examples"
  },
  "keywords": [
    "wamp",
    "client",
    "websocket",
    "rpc",
    "async",
    "await",
    "esnext",
    "typescript",
    "rxjs",
    "observable",
    "pubsub"
  ],
  "files": [
    "dist/",
    "src/"
  ],
  "private": false,
  "scripts": {
    "test": "nyc node_modules/ava/cli.js --files=dist/test/unit-tests/**/*.js",
    "build": "rm -rf dist/ && tsc"
  },
  "devDependencies": {
    "@types/autobahn": "^0.9.39",
    "@types/callsites": "^2.0.0",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.11.3",
    "@types/string-template": "^1.0.2",
    "@types/ws": "^5.1.2",
    "autobahn": "^18.3.2",
    "ava": "^0.25.0",
    "codecov": "^3.1.0",
    "longjohn": "^0.2.12",
    "nyc": "^13.1.0",
    "rxjs-spy": "^7.3.0",
    "source-map-support": "^0.5.6",
    "tslint": "^5.10.0",
    "typed-promisify": "^0.4.0",
    "typedoc": "^0.11.1",
    "typescript": "^3.1.1",
    "yamprint": "^0.8.1",
    "yamprint-ansi-color": "^0.5.2"
  },
  "dependencies": {
    "isomorphic-ws": "^4.0.1",
    "promise-stuff": "^0.3.5",
    "rxjs": "^6.3.3",
    "string-template": "^1.0.0",
    "ws": "^5.2.1",
    "lodash": "^4.17.11"
  },
  "ava": {
    "files": [
      "dist/test/unit-tests/**/*.js"
    ],
    "require": [
      "source-map-support/register"
    ]
  },
  "nyc": {
    "per-file": true,
    "produce-source-map": true,
    "include": [
      "dist/lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "types" : "./dist/lib/index.js"
  }
}
