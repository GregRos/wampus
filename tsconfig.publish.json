{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "allowUnreachableCode": true,
    "lib": [
      "es6",
      "es2015.collection",
      "es2016.array.include",
      "dom"
    ],
    "declaration": true,
    "outDir" : ".tmp/publish",
    "sourceRoot" : "src/",
    "rootDir": "src/lib"
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/lib"
  ]
}